<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/view12"
        android:layout_width="110dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardElevation="1dp">

        <ImageView
            android:id="@+id/img_item_music"
            android:layout_width="110dp"
            android:importantForAccessibility="no"
            android:adjustViewBounds="true"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:src="@android:drawable/screen_background_dark_transparent" />

        <TextView
            android:id="@+id/item_music_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_video_music_off"/>
        <TextView
        android:id="@+id/txt_item_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLines="1"
        android:layout_gravity="bottom"
        android:gravity="right"
            android:textSize="14sp"
        android:background="#8D171717"
        android:textColor="@color/white"
        android:focusable="false"
        android:padding="10dp"
        android:text="@string/app_name"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>