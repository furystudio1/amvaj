<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/rl_suport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/firstback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/firstimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/firstcapaniname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="@string/appname2"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/progress_wheel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:visibility="visible"
                wheel:matProg_barColor="@color/colorPrimaryDark"
                wheel:matProg_progressIndeterminate="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/ipservershow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/version"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="@string/version"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/mainback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:scaleType="fitXY" />

    <WebView
        android:id="@+id/webView1"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:scrollbars="none" />

    <WebView
        android:id="@+id/webView2"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:scrollbars="none" />

    <FrameLayout
        android:id="@+id/video_surface_frame_Menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:foregroundGravity="clip_horizontal|clip_vertical"
        android:visibility="invisible"
        tools:ignore="true">

        <org.videolan.libvlc.util.VLCVideoLayout
            android:id="@+id/video_layout_Menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/mainBG1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border_down_shape_2"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border_down_shape_2"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border_down_shape_white"
            android:gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mainBG2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/esm"
                android:layout_width="105dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttonback10"
                android:gravity="center"
                android:orientation="vertical"
                android:nextFocusLeft="@+id/connectiontab"
                android:nextFocusRight="@+id/ramz"
                android:nextFocusUp="@+id/stream"
                android:nextFocusDown="@+id/stream">

                <TextView
                    android:id="@+id/roomtext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/room"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/roomtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/roomtext1"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/room2"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ramz"
                android:layout_width="105dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttonback10"
                android:gravity="center"
                android:nextFocusLeft="@+id/esm"
                android:nextFocusRight="@+id/weatherclick"
                android:nextFocusUp="@+id/mainbackfilm"
                android:nextFocusDown="@+id/mainbackfilm">

                <TextView
                    android:id="@+id/time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/clock"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time3"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="18:30"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weatherclick"
                android:orientation="vertical"
                android:layout_width="105dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttonback10"
                android:gravity="center"
                android:nextFocusLeft="@+id/ramz"
                android:nextFocusRight="@+id/walletclick"
                android:nextFocusUp="@+id/mainbackmusicw"
                android:nextFocusDown="@+id/mainbackmusicw">

                <TextView
                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/weather"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/walletclick"
                android:orientation="vertical"
                android:layout_width="105dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttonback10"
                android:gravity="center"
                android:nextFocusLeft="@+id/weatherclick"
                android:nextFocusRight="@+id/connectiontab"
                android:nextFocusUp="@+id/mainbackrozname"
                android:nextFocusDown="@+id/mainbackrozname">

                <TextView
                    android:id="@+id/wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/mmm"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/wallet2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/mmmfa"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/connectiontab"
                android:orientation="vertical"
                android:layout_width="105dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttonback10"
                android:gravity="center"
                android:nextFocusLeft="@+id/walletclick"
                android:nextFocusRight="@+id/updateTab"
                android:nextFocusUp="@+id/mainbackmusic"
                android:nextFocusDown="@+id/mainbackmusic">

                <TextView
                    android:id="@+id/connection2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/net"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/connection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/connection2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/updateTab"
                android:orientation="vertical"
                android:layout_width="105dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttonback13"
                android:gravity="center"
                android:nextFocusLeft="@+id/connectiontab"
                android:nextFocusRight="@+id/esm"
                android:nextFocusUp="@+id/stream"
                android:nextFocusDown="@+id/stream">

                <TextView
                    android:id="@+id/update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Update"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/update2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/connection2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textColor="@color/white"
                    android:text="نسخه جدید"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <com.agntic.waves.widget.DrawingOrderRelativeLayout
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:clipToPadding="false"
            android:focusable="false">

            <LinearLayout
                android:id="@+id/list2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/list3"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/view11"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/stream"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:nextFocusLeft="@+id/mainbackmusic"
                        android:nextFocusRight="@+id/mainbackfilm"
                        android:nextFocusUp="@+id/esm"
                        android:nextFocusDown="@+id/esm"
                        android:scaleType="centerCrop"
                        android:src="@drawable/buttonback8"
                        android:focusedByDefault="true"/>

                    <TextView
                        android:id="@+id/texttv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:text="@string/tv"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/view"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp">


                    <ImageView
                        android:id="@+id/mainbackfilm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:nextFocusLeft="@+id/stream"
                        android:nextFocusRight="@+id/mainbackmusicw"
                        android:nextFocusUp="@+id/ramz"
                        android:nextFocusDown="@+id/ramz"
                        android:scaleType="centerCrop"
                        android:src="@drawable/buttonback9" />

                    <TextView
                        android:id="@+id/textvideo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:text="@string/video"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/view3w"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/mainbackmusicw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:nextFocusLeft="@+id/mainbackfilm"
                        android:nextFocusRight="@+id/mainbackrozname"
                        android:nextFocusUp="@+id/weatherclick"
                        android:nextFocusDown="@+id/weatherclick"
                        android:scaleType="centerCrop"
                        android:src="@drawable/buttonback7" />

                    <TextView
                        android:id="@+id/textmusicw"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:text="@string/music"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/view4"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/mainbackrozname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:nextFocusLeft="@+id/mainbackmusicw"
                        android:nextFocusRight="@+id/mainbackmusic"
                        android:nextFocusUp="@+id/walletclick"
                        android:nextFocusDown="@+id/walletclick"
                        android:scaleType="centerCrop"
                        android:src="@drawable/buttonback11" />

                    <TextView
                        android:id="@+id/textnews"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:text="@string/news"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/view3"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/mainbackmusic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:nextFocusLeft="@+id/mainbackrozname"
                        android:nextFocusRight="@+id/stream"
                        android:nextFocusUp="@+id/connectiontab"
                        android:nextFocusDown="@+id/connectiontab"
                        android:scaleType="centerCrop"
                        android:src="@drawable/buttonback12" />

                    <TextView
                        android:id="@+id/textmusic"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:text="@string/www"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/list3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="10dp">


                <TextView
                    android:id="@+id/namechannelmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:paddingLeft="20dp"
                    android:gravity="left"
                    android:paddingBottom="50dp"
                    android:text="@string/tvname"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/namechannelmenu2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/namechannelmenu"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:paddingBottom="25dp"
                    android:text="@string/live"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </com.agntic.waves.widget.DrawingOrderRelativeLayout>


    </RelativeLayout>


</RelativeLayout>